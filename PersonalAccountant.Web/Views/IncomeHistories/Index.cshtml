@model IEnumerable<PersonalAccountant.Web.PAEntity.IncomeHistory>

@{
    ViewData["Title"] = "Income History (List)";
}

<p class="text-right">
    <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp;Add New Income Record</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Sl</th>
                <th style="text-align:right">
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remarks)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Accounts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncomeCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@{
        int serial = 1;
}
    @foreach (var item in Model) {
        <tr>
            <td>
                @(serial++)
            </td>
            <td style="text-align:right">
                <span class="badge bg-green">@string.Format("{0:n0}", item.Amount)</span>    
            </td>
            <td>
                @item.Date.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accounts.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IncomeCategory.Name)
            </td>
            <td style="text-align:right">
                <a asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit btn btn-warning btn-xs" aria-hidden="true"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.ID"><i class="fa fa-remove btn btn-danger btn-xs" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
