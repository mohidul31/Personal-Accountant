@model IEnumerable<PersonalAccountant.Web.PAEntity.ExpenseHistory>

@{
    ViewData["Title"] = "Expense History (List)";
}

<p class="text-right">
    <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp;Add New Expense Record</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>SL</th>
            <th style="text-align:right;">
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accounts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ 
            int serial = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@(serial++)</td>
                <td style="text-align:right;">
                    <span class="badge bg-red">@string.Format("{0:n0}", item.Amount)</span>
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accounts.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpenseCategory.Name)
                </td>
                <td style="text-align:right">
                    <a asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit btn btn-warning btn-xs" aria-hidden="true"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.ID"><i class="fa fa-remove btn btn-danger btn-xs" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
